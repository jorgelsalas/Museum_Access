<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/hello_world"
        tools:context=".TextoActivity" />
    
    <ScrollView
        android:id="@+id/contenedor_textos"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
        android:background="@drawable/border"
        android:fadingEdge="vertical|horizontal"
        android:fadingEdgeLength="@dimen/general_header3"
        android:maxHeight="590dp"
        android:orientation="vertical" >

        <TableLayout
	        android:id="@+id/tabla_textos"
	        android:layout_width="match_parent"
	        android:layout_height="300dp"
	        android:maxHeight="300dp"
	        android:stretchColumns="*" >
	
	        <TableRow
	            android:id="@+id/tableRow_encabezado_textos"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/border_tabla_result" >
	            
	            <TextView
	                android:id="@+id/header_textos"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/headerRowAudio"
	                android:layout_marginLeft="0dp"
	                android:layout_marginRight="1dp"
	                android:background="@drawable/border_elemento_resultados"
	                android:gravity="center"
	                android:textColor="@color/negro" />
	            
	        </TableRow>
	        
	    </TableLayout>
        
    </ScrollView>

</RelativeLayout>